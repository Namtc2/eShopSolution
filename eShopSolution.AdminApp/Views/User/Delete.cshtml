@model eShopSolution.ViewModels.System.Users.UserDeleteRequest


@{
    ViewData["Title"] = "Xoá người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main>
    <div class="container-fluid">
        <h1 class="mt-4">Chi tiết người dùng</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="index.html">Trang chủ</a></li>
            <li class="breadcrumb-item active">Xóa người dùng</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <a asp-action="Index" asp-asp-controller="User" class="btn btn-success">Về danh sách</a>
            </div>
            <div class="card-body col-md-12">
                <div class="row">
                    <dl class="row col-md-12">
                        <dt class="col-md-2">
                            @Html.DisplayNameFor(model => model.Id)
                        </dt>
                        <dd class="col-md-10">
                            @Html.DisplayFor(model => model.Id)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input asp-for="Id" type="hidden" />
                        <input type="submit" value="Xóa" class="btn btn-danger" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>